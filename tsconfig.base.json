{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@wang-ku/api/database": ["libs/api/database/src/index.ts"],
      "@wang-ku/api/database/migrations": [
        "libs/api/database/migrations/src/index.ts"
      ],
      "@wang-ku/api/error-handling": ["libs/api/error-handling/src/index.ts"],
      "@wang-ku/api/features/auth": ["libs/api/features/auth/src/index.ts"],
      "@wang-ku/api/features/business": [
        "libs/api/features/business/src/index.ts"
      ],
      "@wang-ku/api/features/user": ["libs/api/features/user/src/index.ts"],
      "@wang-ku/api/plugins": ["libs/api/plugins/src/index.ts"],
      "@wang-ku/api/util/test": ["libs/api/util/test/src/index.ts"],
      "@wang-ku/shared/schema": ["libs/shared/schema/src/index.ts"]
    },
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "tmp"]
}
